<!-- Modal for removing sendto -->
<!-- use of this modal requires the id be passed as part of ViewBag -->

<button class="btn btn-primary" data-toggle="modal" data-target="#removeSendToModal">
    <span class="glyphicon glyphicon-remove"></span>
    Remove SendTo...
</button>

<div class="modal fade" id="removeSendToModal" tabindex="-1" role="dialog" aria-labelledby="removeSendToModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="removeSendToModalLabel">Remove SendTo</h4>
            </div>
            <form class="form-horizontal" action="~/Template/RemoveSendTo/@ViewBag.id" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="Old_SendTo_Address">Remove SendTo</label>
                        <div class="col-lg-10">
                            <select name="Old_SendTo_Address" id="Old_SendTo_Address" class="form-control">
                                @if (Model.SendTo != null)
                                { 
                                    foreach (var item in Model.SendTo) 
                                    {
                                        <option>@item.Address</option>
                                    }
                                }
                            </select>
                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Old_SendTo_Address"></span>
                        </div>
                    </div>
                </div>

                <div id="removeMemberModalErrors"></div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Remove SendTo
                    </button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->