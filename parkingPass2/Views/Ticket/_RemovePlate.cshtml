<!-- Modal for removing plate -->
<!-- use of this modal requires the id be passed as part of ViewBag -->

<button class="btn btn-danger" data-toggle="modal" data-target="#removePlateModal">
    <span class="glyphicon glyphicon-remove"></span>
    Remove Vehicle...
</button>

<div class="modal fade" id="removePlateModal" tabindex="-1" role="dialog" aria-labelledby="removePlateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="removePlateModalLabel">Remove Plate</h4>
            </div>
            <form class="form-horizontal" action="~/Ticket/RemovePlate/@ViewBag.id" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="Old_Plate">Remove Plate</label>
                        <div class="col-lg-10">
                            <select name="Old_Plate" id="Old_Plate" class="form-control">
                                @if (Model.Vehicles != null)
                                { 
                                    foreach (var item in Model.Vehicles) 
                                    {
                                        <option>@item.Plate</option>
                                    }
                                }
                            </select>
                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Old_Plate"></span>
                        </div>
                    </div>
                </div>

                <div id="removeMemberModalErrors"></div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Remove Plate
                    </button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->